<h2 class="text-info">Available yoga classes</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Instructor</th>
      <th>Days</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workouts.each do |workout| %>
      <tr>
        <td><%= workout.name %></td>
        <td><%= workout.description %></td>
        <td><%= workout.instructor %></td>
        <td><%= workout.days %></td>
        <td><%= image_tag workout.image_url, class: "thumbnail", size: "64x64" %></td>
        <td><%= link_to 'Show', workout, class: 'btn btn-info'%></td>
        <td><%= link_to 'Edit', edit_workout_path(workout), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', workout, class: 'btn btn-warning', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Workout', new_workout_path, class: 'btn btn-success' %>
